{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2019"],
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "sourceMap": true
  },
  "include": ["src", "../../main.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
